<%= form_with(model: @transaction, local: true) do |f| %>

  <%= f.hidden_field :seller_id, value: @user.id %>

  <div class="form-group">
    <%= f.label :buyer_id %>

    <%= f.collection_select :buyer_id, User2.all, :id, :to_s, {}, class: "form-control" %>
  </div>

  <%= f.submit "Create transaction", class: "btn btn-block btn-outline-secondary" %>
<% end %>
